{
    "layer": "top",
    "fixed-center": false,
    "modules-left": [
        "custom/gentoo",
        "hyprland/workspaces",
        "hyprland/window"
    ],
    "modules-center": [],
    "modules-right": [
        "tray",
        "mpris",
        "custom/weather",
        "custom/syncthing",
        "cpu",
        "memory",
        "network",
        "bluetooth",
        "wireplumber",
        "power-profiles-daemon",
{% if hostname == "gentoo-zephyrus" -%}
        "battery",
{% endif -%}
        "clock"
    ],
    "custom/gentoo": {
        "format": "󰣨"
    },
    "hyprland/window": {
        "rewrite": {
            "class<Microsoft-edge>": "Microsoft Edge"
        }
    },
    "tray": {
        "icon-size": 13,
        "spacing": 12
    },
    "mpris": {
        "interval": 1,
        "format": " {dynamic} {status_icon}",
        "dynamic-order": [
            "title",
            "artist"
        ],
        "title-len": 32,
        "status-icons": {
            "playing": "",
            "paused": "",
            "stopped": ""
        },
        "player-icons": {
            "firefox": "󰈹",
            "vlc": "󰕼",
            "spotify": "",
            "chromium": "󰊯",
            "edge": "󰇩",
            "plex": "󰚺"
        },
        "tooltip": false
    },
    "custom/weather": {
        "format": "󰔏 {}",
        "interval": 1800,
        "tooltip": false,
        "exec": "waybar-weather.py"
    },
    "custom/syncthing": {
        "format": "{icon} {}",
        "format-icons": {
            "default": "󰓦",
            "error": "󰓧"
        },
        "return-type": "json",
        "interval": 15,
        "tooltip": false,
        "exec": "waybar-syncthing.py"
    },
    "cpu": {
        "format": "󰻠 {usage}%",
        "interval": 10,
        "tooltip": false
    },
    "memory": {
        "format": "󰘚 {percentage}%",
        "interval": 10,
        "tooltip": false
    },
    "network": {
        "format-ethernet": "󰈀 {ifname}",
        "format-wifi": "󰖩 {ifname}",
        "format-disconnected": "󰅛 disconnected",
        "interval": 10,
        "tooltip": false,
        "on-click": "kitty nmtui"
    },
    "bluetooth": {
        "format": "󰂯 none",
        "format-connected": "󰂱 {device_alias}",
        "format-off": "󰂲 off",
        "interval": 10,
        "tooltip": false,
        "on-click": "/home/michael/.local/bin/tofi-bluetooth.py"
    },
    "wireplumber": {
        "format": "{icon} {volume}%",
        "format-muted": "󰝟 mute",
        "format-icons": [
            "󰕿",
            "󰖀",
            "󰕾"
        ],
        "on-click": "/home/michael/.local/bin/tofi-wireplumber.py"
    },
    "power-profiles-daemon": {
        "format": "{icon} {profile}",
        "tooltip": false,
        "format-icons": {
            "default": "",
            "performance": "󰈸",
            "balanced": "",
            "power-saver": ""
        }
    },
{% if hostname == "gentoo-zephyrus" -%}
    "battery": {
        "bat": "BAT0",
        "interval": 10,
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-charging": " {capacity}%",
        "format-icons": [
            "",
            "",
            "",
            "",
            ""
        ],
        "max-length": 25
    },
{% endif -%}
    "clock": {
        "format": "󰃰 {:%A, %B %d %I:%M %p}"
    }
}
