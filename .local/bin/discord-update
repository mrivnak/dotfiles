#!/bin/zsh
cd /tmp/
echo "Installing Discord"
echo "[1/4] Fetching binary..."
wget "https://discord.com/api/download?platform=linux&format=tar.gz" -O discord.tar.gz
echo "\n[2/4] Extracting tarball..."
tar xpvf discord.tar.gz
echo "\n[3/4] Copying files..."
cp -rv Discord /home/michaelrivnak/.local/bin/
echo "\n[4/4] Cleaning up..."
rm -rvf Discord discord.tar.gz
echo "Discord successfully installed!"
