#!/bin/zsh
cd /tmp/
echo "[1/4] Fetching binary..."
wget https://update.code.visualstudio.com/latest/linux-x64/stable -O code.tar.gz
echo "[2/4] Extracting tarball..."
tar xpf code.tar.gz
echo "[3/4] Copying files..."
cp -r VSCode-linux-x64 /home/michaelrivnak/.local/bin/
echo "[4/4} Cleaning up..."
rm -rf VSCode-linux-x64 code.tar.gz
